@model WhiteBears.Models.Task

<div id="taskDetailModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left:0% !important">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">           
                <div class="form-group">
                    <div class="col-sm-6">
                        <h4 class="modal-title text-left">Task</h4>
                    </div>
                    <div class="col-sm-6">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>

            </div>
            <div class="modal-body">

                <!-- Errors -->
                <div class="form-group row">
                    <div class="col-sm-12" id="taskErrors">
                    </div>

                </div>
                <hr />
             
                <div class="container-fluid">
                    <div class="row">
                        <div class="Contain">
                            <!-- Task Title -->
                            <div class="form-group  row">
                                <Label for="taskTitle">Title </Label>
                                <text id="taskDetailTitle" name="taskDetailTitle"></text>
                            </div>

                            <!-- Task Description -->
                            <div class="form-group row">
                                <Label for="taskDescription">Description </Label>
                                <text id="taskDetailDescription" name="taskDetailDescription"></text>
                            </div>

                            <!-- Task StartDate -->
                            <div class="form-group row">
                                <Label for="taskStartDate">Start Date </Label>
                                <text id="taskDetailStartDate" name="taskDetailStartDate"></text>
                            </div>

                            <!-- Task DueDate -->
                            <div class="form-group row">
                                <Label for="taskDueDate">Due Date </Label>
                                <text id="taskDetailDueDate" name="taskDetailDueDate"></text>
                            </div>


                            <!-- Task Completion Date -->
                            <div class="form-group row">
                                <Label for="taskCompletionDate">Completion Date </Label>
                                <text id="taskDetailCompletionDate" name="taskDetailCompletionDate"></text>
                            </div>

                            <!-- Task Priority -->
                            <div class="form-group row">
                                <Label for="taskPriority">Priority </Label>
                                <text id="taskPriority" name="taskPriority"></text>
                            </div>

                       
                            <!-- Task Title -->
                            <div class="form-group  row">
                                <Label for="taskUser" class="hidden" id="taskUser">User </Label>
                                <text id="taskDetailUser" class="hidden" name="taskDetailUser"></text>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="taskClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div> <!-- Modal Body Ends here -->
            </div>
                </div> <!-- Modal Content Ends here -->
            </div>
</div>

