@model WhiteBears.Models.Task

<div id="taskDetailModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left:0% !important">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Task</h4>

                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <!-- Errors -->
                <div class="form-group row">
                    <div class="col-sm-12" id="taskErrors">
                    </div>

                </div>
                <hr />

                <!-- Task Id -->
                <!-- Task Title -->
                <div class="form-group row">
                    <Label for="taskTitle">Title</Label>
                    <text id="taskTitle" name="taskTitle"></text>
                </div>

                <!-- Task Description -->
                <div class="form-group row">
                    <Label for="taskDescription">Description</Label>
                    <text id="taskDescription" name="taskDescription"></text>
                </div>

                <!-- Task StartDate -->
                <div class="form-group row">
                    <Label for="taskStartDate">Start Date</Label>
                    <text id="taskStartDate" name="taskStartDate"></text>
                </div>

                <!-- Task DueDate -->
                <div class="form-group row">
                    <Label for="taskDueDate">Due Date</Label>
                    <text id="taskDueDate" name="taskDueDate"></text>
                </div>


                <!-- Task Completion Date -->
                <div class="form-group row">
                    <Label for="taskCompletionDate">Completion Date</Label>
                    <text id="taskCompletionDate" name="taskCompletionDate"></text>
                </div>

                <!-- Task Priority -->


                <div class="modal-footer">
                   
                </div>

            </div> <!-- Modal Body Ends here -->

        </div> <!-- Modal Content Ends here -->
    </div>
</div>

