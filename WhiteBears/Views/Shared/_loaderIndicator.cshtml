@Styles.Render("~/bundles/style/loader");

<div id="LoaderModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left:0% !important">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Loading...</h4>
                <button type="button" class="close" data-dismiss="modal" hidden>&times;</button>
            </div>
            <div class="modal-body">
                <div class="loader"></div>
            </div> <!-- Modal Body Ends here -->
        </div> <!-- Modal Content Ends here -->
    </div>
</div>
