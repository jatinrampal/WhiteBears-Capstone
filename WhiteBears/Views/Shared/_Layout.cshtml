<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhiteBears - Project Management Portal</title>
    @Scripts.Render("~/bundles/scripts/jquery")
    @Scripts.Render("~/bundles/scripts/modernizr")
    @Scripts.Render("~/bundles/scripts/angular")
    @Scripts.Render("~/bundles/scripts/popper")
    @Scripts.Render("~/bundles/scripts/bootstrap")
    @Styles.Render("~/bundles/style/bootstrap")
    @Styles.Render("~/bundles/style/layout")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 500px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("WhiteBears", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                    <li>@Html.ActionLink("Business", "About", "Home")</li>
                    <li>@Html.ActionLink("Features", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Pricing", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About Us", "Contact", "Home")</li>
                    
                </ul>

                <ul class="nav navbar-nav pull-right">
                    <li class="pull-right">@Html.ActionLink("Sign Out", "LogOut", "Home")</li>
                </ul>
            </div>
        </div>
    </div >
    <div class="container body-content" style="width: 100%; margin: 0px; padding: 0px">
        @RenderBody()


    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
